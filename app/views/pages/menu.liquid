---
title: Menu

# true if the page is included in the menu
listed: true

# true if the page is published
published: true

# position among sibling pages
# position: 1

# sets a redirection to the given url (301)
# redirect_url: "<url to a page or to a remote url>"

# content type that this page is templatizing
# content_type: "<slug of one of the content types>"

# editable_elements:
#   'some_block/some_slug': "<text>"
#   'some_block/some_slug': "<relative path to the file under the public/samples folder>"
---
{% extends parent %}

{% block main %}

  <!-- Nav tabs -->
  <ul class="nav nav-pills nav-stacked menu-nav col-md-2">
      <li class="active"><a href="#smoothie" data-toggle="tab">Smoothies</a></li>

      {% assign category = 'smoothie' %}
      {% for product in contents.products %}{% if product.category != category %}
        <li><a href="#{{ product.category }}" data-toggle="tab">{{ product.category | capitalize }}</a></li>
        {% assign category = product.category %}
      {% endif %}{% endfor %}
  </ul>


  <!-- Tab panes -->
  <div class="tab-content">

    <div class="menu-container col-md-10 tab-pane fade in active" id="smoothie">
      <table class="table menu">
        {% for product in contents.products %}
          {% if product.category == 'smoothie' %}
            <tr>
              <th>{{ product.title }}</th>
              {% unless product.description == '' %}
                <td><span class="star">* </span><span>{{ product.description }}</span></td>
              {% endunless %}
            </tr>
          {% endif %}
        {% endfor %}
      </table>
    </div>

    {% assign category = 'smoothie' %}
    {% for group in contents.products %}{% if group.category != category %}
      {% assign category = group.category %}
        <div class="menu-container col-md-10 fade tab-pane" id="{{ group.category }}">
        <table class="table menu">
          {% for product in contents.products %}{% if product.category == group.category %}
            <tr>
              <th>{{ product.title }}</th>
              {% unless product.description == '' %}
                <td class="description"><span class="star">* </span><span>{{ product.description }}</span></td>
              {% endunless %}
            </tr>
          {% endif %}{% endfor %}
        </table>
      </div>
    {% endif %}{% endfor %}
  </div>

{% endblock %}
